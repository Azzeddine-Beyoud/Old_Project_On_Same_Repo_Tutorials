<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:startColor="#ef4444"
                android:endColor="#992f2f"
                android:angle="900">

            </gradient>

            <corners
                android:radius="100dp">

            </corners>

            <padding
                android:bottom="5pt"
                android:top="5pt"
                android:left="5pt"
                android:right="5pt">

            </padding>

            <stroke
                android:color="#00bfd5"
                android:width="5dp">

            </stroke>
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <corners
                android:radius="100dp">
            </corners>

            <padding
                android:bottom="5pt"
                android:top="5pt"
                android:left="5pt"
                android:right="5pt">

            </padding>

            <solid android:color="#ef4444"> </solid>


            <stroke
                android:color="#00bfd5"
                android:width="1dp">

            </stroke>
        </shape>
    </item>

</selector>