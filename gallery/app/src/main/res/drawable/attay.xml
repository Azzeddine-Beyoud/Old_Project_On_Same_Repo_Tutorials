<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
      <shape>
        <solid
            android:color="#ef4444"/>
        <padding
            android:right="10dp"
            android:left="10dp"
            android:top="10dp"
            android:bottom="10dp"/>
        <corners
            android:radius="5dp"/>

        <stroke
            android:color="@android:color/white"
            android:width="5dp"/>


      </shape>
    </item>

    <item>
        <shape>
            <padding
                android:right="10dp"
                android:left="10dp"
                android:top="10dp"
                android:bottom="10dp"/>

            <corners
                android:radius="5dp"/>


            <stroke
                android:color="@android:color/white"
                android:width="5dp"/>

            <gradient
                android:startColor="#ef4444"
                android:endColor="#992f2f"
                android:angle="270"/>

        </shape>

    </item>
</selector>